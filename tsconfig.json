{
  "compilerOptions": {
      "target": "es2015",
      "lib": ["es6"],
      "types": ["reflect-metadata"],
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "experimentalDecorators":true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": false,
      "sourceMap": true,
      "declaration": false,
      "rootDir": "./src",
      "outDir": "./bin",
      "typeRoots": [
        "./node_modules/@types"
      ]
  },
  "exclude": [
      "node_modules",
      "test"
  ]
}
